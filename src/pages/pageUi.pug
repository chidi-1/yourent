extends ../views/layouts/layout-ui

block vars
    - var pageClass = 'page-ui'

block content
    include ../views/components/header
    include ../views/components/footer

    section
        .container
            .mb-20
                h2 Typography

                h1 Заголовок h1
                h2 Заголовок h2
                h3 Заголовок h3
                .subtitle-1 Subtitle 1
                .subtitle-2 Subtitle 2
                p Main text (Semobold)
                p
                    strong Main text bold

    section
        .container
            .mb-20
                h2 Colors

            ul.colors
                li.bg-red
                li.bg-yellow
                li.bg-violet
                li.bg-green
                li.bg-white
                li.bg-gray-light
                li.bg-gray-text
                li.bg-gray
                li.bg-black

    section
        .container
            .mb-20
                h2 Icons

                ul.icons
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--location')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--clock')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--phone')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--mail')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--whatsapp-black')
                    li
