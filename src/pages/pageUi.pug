                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--filter')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--telegram')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--whatsapp')
                    li
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--catalog')
                    li
                        svg(width=32 height=32 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--file')
                    li
                        svg(width=32 height=32 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--close')
                    li
                        svg(width=46 height=46 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--warehouse')
                    li
                        svg(width=46 height=46 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--delivery')
