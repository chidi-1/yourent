                    li
                        svg(width=46 height=46 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--start-border')
                    li
                        svg(width=46 height=46)
                            use(xlink:href='/public/sprite.svg#icon--start-fill')

    section
        .container
            .mb-20
                h2 Button

                .buttons
                    div
                        div
                            p Красная кнопка
                            button.button.button-red В корзину

                        div
                            p Красная кнопка с иконкой
                            button.button.button-red
                                svg(width=24 height=24 fill='none')
                                    use(xlink:href='/public/sprite.svg#icon--cart')
                                span В корзину

                    div
                        div
                            p Красная кнопка заблокировано
                            button(disabled).button.button-red В корзину
                        div
                            p Красная кнопка с иконкой заблокировано
                            button(disabled).button.button-red
                                svg(width=24 height=24 fill='none')
                                    use(xlink:href='/public/sprite.svg#icon--cart')
                                span В корзину

                    div
                        div
                            p Красная кнопка маленькая
                            button.button.button-red.button-small В корзину

                        div
                            p Красная кнопка маленькая с иконкой
                            button.button.button-red.button-small
                                svg(width=24 height=24 fill='none')
                                    use(xlink:href='/public/sprite.svg#icon--cart')
                                span В корзину

                    div
                        p Элемент меню
                        nav.nav
                            a(href='').catalog.button.button-red
                                svg(width=24 height=24 fill='none')
                                    use(xlink:href='/public/sprite.svg#icon--catalog')
                                span Каталог

                    div
                        p Серая кнопка
                        button.button.button-gray Категория

                    div
                        p Корзина пустая
                        .cart.button.button-gray
                            svg(width=24 height=24 fill='none')
                                use(xlink:href='/public/sprite.svg#icon--cart')

                        div
                            p Корзина со счетчиком
                            .cart.button.button-gray
                                svg(width=24 height=24 fill='none')
                                    use(xlink:href='/public/sprite.svg#icon--cart')
                                span.counter 2

                    div
                        p Кнопка слайдера
                        button.button.button-gray.swiper-button-prev
                            svg(width=24 height=24)
                                use(xlink:href='/public/sprite.svg#angle--left')
                        button.button.button-gray.swiper-button-next
                            svg(width=24 height=24)
                                use(xlink:href='/public/sprite.svg#angle--right')

                    div
                        p Заголовки табов

                        ul.tabs__caption
                            li.active Статьи
                            li Обзоры
                            li Видео

                p Пагинация
                .pagination
                    span.pagination__el 1
                    a(href='').pagination__el 2
                    a(href='').pagination__el 3
                    a(href='').pagination__el.dots
                        svg(width=24 height=24 fill='none')
                            use(xlink:href='/public/sprite.svg#icon--dots')
                    a(href='').pagination__el 11
                    a(href='').pagination__el 12

    .container
        include ../views/components/main-categories

    section
        .container
            .section__header.justify
                h2 Слайдер с товарами

                .slider-buttons
                    .swiper-button-prev.button.button.button-gray.swiper-button-prev
                        svg(width=24 height=24)
                            use(xlink:href='/public/sprite.svg#angle--left')
                    .swiper-button-next.button.button-gray.swiper-button-next
                        svg(width=24 height=24)
                            use(xlink:href='/public/sprite.svg#angle--right')

            include ../views/components/products-slider

    section.like
        .container
            .section__header.justify
                h2 Горизонтальный слайдер с товарами

                .slider-buttons
                    .swiper-button-prev.button.button.button-gray.swiper-button-prev
                        svg(width=24 height=24)
                            use(xlink:href='/public/sprite.svg#angle--left')
                    .swiper-button-next.button.button-gray.swiper-button-next
                        svg(width=24 height=24)
                            use(xlink:href='/public/sprite.svg#angle--right')


            include ../views/components/products-slider-horisontal

    .container
        include ../views/components/steps

        include ../views/components/about

